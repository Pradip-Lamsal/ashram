{
  "buildCommand": "npm run force-build",
  "framework": "nextjs",
  "env": {
    "NPM_CONFIG_LEGACY_PEER_DEPS": "true",
    "NPM_CONFIG_FORCE": "true"
  },
  "functions": {
    "app/api/download-receipt-pdf/route.ts": {
      "maxDuration": 30,
      "memory": 1024
    },
    "app/api/send-receipt-email/route.ts": {
      "maxDuration": 30,
      "memory": 1024
    }
  },
  "outputDirectory": ".next",
  "public": true
}